<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FONDO ANIMADO -->
    <com.example.freester.AnimatedGradientView
        android:id="@+id/animatedBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- CONTENIDO -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <!-- ÃREA CENTRAL PLAY -->
        <FrameLayout
            android:id="@+id/playArea"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/layoutSecondaryControls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.7">

            <View
                android:id="@+id/playCircle"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:background="@drawable/play_circle_outline" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_pause_filled"
                android:tint="@android:color/white"
                android:scaleType="fitCenter"
                android:padding="32dp" />
        </FrameLayout>

        <!-- CONTROLES SECUNDARIOS -->
        <LinearLayout
            android:id="@+id/layoutSecondaryControls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/playArea"
            app:layout_constraintBottom_toTopOf="@id/btnScanAgain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnBack5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back_5"
                android:tint="@android:color/white"
                android:scaleType="fitCenter"
                android:padding="12dp"/>

            <ImageButton
                android:id="@+id/btnRestart"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginHorizontal="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_restart"
                android:tint="@android:color/white"
                android:scaleType="fitCenter"
                android:padding="12dp"/>

            <ImageButton
                android:id="@+id/btnForward5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_forward_5"
                android:tint="@android:color/white"
                android:scaleType="fitCenter"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- VOLVER A ESCANEAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&lt;&lt;  Volver a escanear  &gt;&gt;"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="0dp"
            app:rippleColor="@android:color/transparent"
            android:padding="12dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@id/layoutSecondaryControls"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
